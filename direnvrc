## Local .vimrc files by calling the following in a .envrc
add_extra_vimrc() {
  local extravim="$(find_up .vimrc)"
  if [ -n "$extravim" ]; then
    echo "Adding extra .vimrc: ${extravim}"
    path_add EXTRA_VIM $extravim
  fi
}

## use a global pyenv (for pyenv-virenv)
use_pyenv() {
  eval "$(pyenv init -)"
  export PYENV_VIRTUALENV_DISABLE_PROMPT=1
  pyenv activate $1
}

## A shortcut for layout python with pyenv
use_python() {
  local python_root=$HOME/.pyenv/versions/$1
  load_prefix "$python_root"
  if [[ -x "$python_root/bin/python3" ]]; then
    layout python3 "$python_root/bin/python3"
  else
    layout python "$python_root/bin/python"
  fi
}

## chef-dk summoner
use_chefdk() {
  eval "$(chef shell-init bash)"
}

## When one does ruby
use_ruby() {
  local ruby_dir=$HOME/.rubies/ruby-$1
  load_prefix $ruby_dir
  layout ruby
}

## Rusy
use_rust() {
  PATH_add $HOME/.cargo/bin
  export RUST_SRC_PATH=$HOME/.multirust/toolchains/stable-x86_64-apple-darwin/lib/rustlib/src/rust/src
}
