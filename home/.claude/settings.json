{
  "permissions": {
    "allow": [
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo test:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh search:*)",
      "Bash(go test:*)",
      "Bash(grep:*)",
      "Bash(just check:*)",
      "Bash(just test:*)",
      "Bash(ls:*)",
      "Bash(make test:*)",
      "Bash(nix shell:*)",
      "Bash(npm test:*)",
      "Bash(python -m pytest:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [
      "Read(.envrc)",
      "Read(.env)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Task completed - check results'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  }
}
