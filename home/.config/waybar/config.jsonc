{
  "margin-left": 5,
  "margin-right": 5,
  "margin-top": 3,
  "margin-bottom": 1,
  "modules-left": [
    "battery",
    "cpu",
    "memory",
    "disk",
    "gamemode",
    "systemd-failed-units"
  ],
  "modules-center": [
    "cffi/niri-taskbar",
    "niri/workspaces"
  ],
  "modules-right": [
    "tray",
    "group/audio",
    "backlight",
    "idle_inhibitor",
    "power-profiles-daemon",
    "clock"
  ],
  "cpu": {
    "format": "󰍛 {usage}%"
  },
  "memory": {
    "format": "󰘚 {percentage}%"
  },
  "disk": {
    "interval": 60,
    "format": "󰋊 {percentage_used}%",
    "path": "/"
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-charging": "󰂄 {capacity}%",
    "format-plugged": "󰚥 {capacity}%",
    "format-alt": "{icon} {time}",
    "format-icons": [
      "󰂎",
      "󰁺",
      "󰁻",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰂂",
      "󰁹"
    ]
  },
  "gamemode": {
    "format": "{glyph} {count}",
    "glyph": "󰊖",
    "tooltip": true,
    "tooltip-format": "Games running: {count}"
  },
  "systemd-failed-units": {
    "hide-on-ok": true,
    "format": "󰒓 {nr_failed}",
    "system": true,
    "user": true
  },
  "niri/workspaces": {
    "disable-scroll": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九",
      "10": "十"
    }
  },
  "cffi/niri-taskbar": {
    "module_path": "/run/current-system/sw/lib/libniri_taskbar.so"
  },
  "tray": {
    "icon-size": 21,
    "spacing": 5
  },
  "clock": {
    "format": "{:%a, %b %d 󰥔  %H:%M}",
    "tooltip-format": "<big>{:%a, %B %d %Y}</big>\n<tt>{calendar}</tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#000000'><b>{}</b></span>",
        "days": "{}",
        "weeks": "<i>w{}</i>",
        "weekdays": "{}",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "󰅶",
      "deactivated": "󰛊"
    }
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "󰁹",
      "performance": "󰓅",
      "balanced": "󰾅",
      "power-saver": "󰾆"
    }
  },
  "backlight": {
    "format": "{icon}  {percent}%",
    "format-icons": [
      "󰃞",
      "󰃟",
      "󰃠"
    ]
  },
  "group/audio": {
    "orientation": "horizontal",
    "modules": [
      "wireplumber",
      "wireplumber#source"
    ],
    "drawer": {}
  },
  "wireplumber": {
    "format": "󰕾  {volume}%",
    "format-muted": "󰝟  ミュート",
    "scroll-step": 5
  },
  "wireplumber#source": {
    "node-type": "Audio/Source",
    "format": " 󰍬 {volume}%",
    "format-muted": " 󰍭 ミュート",
    "scroll-step": 5
  }
}
