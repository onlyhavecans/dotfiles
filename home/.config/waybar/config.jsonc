// -*- mode: jsonc -*-
{
  "margin-left": 10,
  "margin-right": 10,
  "modules-left": [
    "battery",
    "cpu",
    "memory",
    "temperature",
    "disk",
    "wireplumber",
    "wireplumber#source",
    "power-profiles-daemon",
    "backlight",
    "mpris"
  ],
  "temperature": {
    // for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
    // "thermal-zone": 1,
    "hwmon-path": "/sys/class/hwmon/hwmon0/temp2_input",
    "critical-threshold": 85,
    "format-critical": "{temperatureC}°C",
    "format": "{temperatureC}°C"
  },
  "cpu": {
    "format": " {usage}%"
  },
  "memory": {
    "format": " {percentage}%"
  },
  "disk": {
    "interval": 60,
    "format": "󰋊 {percentage_used}%",
    "path": "/"
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ]
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "",
      "performance": "",
      "balanced": "",
      "power-saver": ""
    }
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ]
  },
  "wireplumber": {
    "format": " {volume}%",
    "format-muted": " ミュート",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 100%",
    "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
    "scroll-step": 5
  },
  "wireplumber#source": {
    "node-type": "Audio/Source",
    "format": "{volume}%",
    "format-muted": " ミュート",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-click-right": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 100%",
    "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%-",
    "scroll-step": 5
  },
  "mpris": {
    "format": "{status_icon} {dynamic}",
    "dynamic-len": 42,
    "status-icons": {
      "playing": "",
      "paused": ""
    },
    "dynamic-order": [
      "title",
      "artist",
      "album",
      "length"
    ],
    "ignored-players": [
      "firefox",
      "chromium"
    ]
  },
  "modules-center": [
    "niri/workspaces",
    "wlr/taskbar"
  ],
  "niri/workspaces": {
    "disable-scroll": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "八",
      "10": "十"
    }
  },
  "niri/window": {
    "format": "{}",
    "max-length": 69
  },
  "wlr/taskbar": {
    "icon-theme": "rose-pine",
    "format": "{icon}",
    "icon-size": 24,
    "on-click": "activate"
  },
  "modules-right": [
    "tray",
    "custom/recording",
    "gamemode",
    "systemd-failed-units",
    "custom/weather",
    "custom/tomat",
    "clock",
    "custom/lock",
    "custom/logout",
    "custom/reboot",
    "custom/shutdown"
  ],
  "tray": {
    "icon-size": 18,
    "spacing": 8
  },
  "custom/recording": {
    "interval": 2,
    "exec-if": "pgrep wf-recorder",
    "exec": "echo ",
    "on-click": "kill $(pgrep wf-recorder)",
    "tooltip": false
  },
  "gamemode": {
    "format": "{glyph}",
    "format-alt": "{glyph} {count}",
    "glyph": "󰊖",
    "tooltip": true,
    "tooltip-format": "Games running: {count}"
  },
  "systemd-failed-units": {
    "hide-on-ok": true,
    "format": "✗ {nr_failed}",
    "format-ok": "✓",
    "system": true,
    "user": true
  },
  "custom/weather": {
    "format": "{}",
    "interval": 1800,
    "exec": "curl -s 'wttr.in?m&format=1'"
  },
  "custom/tomat": {
    "exec": "tomat status",
    "interval": 1,
    "return-type": "json",
    "format": "{text}",
    "tooltip": true,
    "on-click": "tomat toggle",
    "on-click-right": "tomat skip"
  },
  "clock": {
    "format": "{:%a, %b %d%H:%M}",
    "tooltip-format": "<big>{:%a, %B %d %Y}</big>\n<tt>{calendar}</tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#000000'><b>{}</b></span>",
        "days": "{}",
        "weeks": "<i>w{}</i>",
        "weekdays": "{}",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },
  "custom/lock": {
    "format": "󰌾",
    "on-click": "swaylock",
    "tooltip": false
  },
  "custom/logout": {
    "format": "󰍃",
    "on-click": "niri msg action quit",
    "tooltip": false
  },
  "custom/reboot": {
    "format": "󰜉",
    "on-click": "systemctl reboot",
    "tooltip": false
  },
  "custom/shutdown": {
    "format": "󰐥",
    "on-click": "systemctl poweroff",
    "tooltip": false
  }
}
