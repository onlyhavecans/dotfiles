[user]
	name = Amelia Aronsohn
	email = squirrel@wearing.black
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIKB1455gJY9YjpfT61kAUjtEkLilH/ejeb2tLwgEAqLA 2022-09-30
[core]
	excludesfile = ~/.gitignore
	editor = vim
	autocrlf = input
[format]
	signOff = true
[commit]
	gpgsign = true
[gpg]
	format = ssh
[push]
	default = current
	autoSetupRemote = true
[fetch]
	prune = true
[init]
	defaultBranch = main
[pull]
	ff = only
[alias]
	ad = add --all
	al = config --get-regexp alias
	ap = add --patch
	br = branch
	c = commit --signoff --verbose
	cm = commit --signoff --message
	commit = commit --signoff
	pl = pull
	ps = push
	review = log --oneline
	s = status
	st = status
	sw = switch
	swc = switch --force-create
	pr = "!f() { git fetch origin pull/$1/head:pr-$1 && git switch pr-$1; }; f"
	sm = "!f() { git switch main && git fetch --prune && git pull; }; f"
	wipe = "!f() { git branch | egrep -v '( main$|master$|^\\*)' | xargs git branch -D; }; f"
	open = "!git_open"
	prs = "!prsbad"
	lg = log --pretty=reference

#Silly tools fight for config down here
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

