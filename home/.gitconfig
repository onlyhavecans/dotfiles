	name = Amelia Aronsohn
	email = squirrel@wearing.black
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIKB1455gJY9YjpfT61kAUjtEkLilH/ejeb2tLwgEAqLA 2022-09-30
[core]
	excludesfile = ~/.gitignore
	editor = nvim
	autocrlf = input
[commit]
	gpgsign = true
	verbose = true
[gpg]
	format = ssh
[push]
	default = current
	autoSetupRemote = true
[merge]
	conflictstyle = zdiff3
[diff]
	algorithm = histogram
[rebase]
	autostash = true
[rerere]
	enabled = true
[transfer]
	fsckobjects = true
[receive]
	fsckObjects = true
[fetch]
	prune = true
	fsckobjects = true
[init]
	defaultBranch = main
[pull]
	rebase = true
[alias]
	ad = add --all
	al = config --get-regexp alias
	ap = add --patch
	br = branch
	cm = commit --message
	lg = log --graph --pretty='format:%C(auto)%h %s, %C(magenta)%ad' --date=relative
	pl = pull
	ps = push
	st = status --short --show-stash --branch
	stash = stash --all
	sw = switch
	swc = switch --force-create
	# Shell commands
	bb = "!git-better-branch"
	open = "!git_open"
	pr = "!f() { git fetch origin pull/$1/head:pr-$1 && git switch pr-$1; }; f"
	prs = "!prsbad"
	sm = "!f() { git switch main && git fetch --prune && git pull; }; f"
	wipe = "!f() { git branch | egrep -v '( main$|master$|^\\*)' | xargs git branch -D; }; f"

#Silly tools fight for config down here
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

