#!/usr/bin/env bash

##
# Clean up after removing things from homeshick castles
##

fd --hidden --follow --type l \
  --exclude .nix-defexpr \
  --exclude .local/share/flatpak \
  --exclude Code \
  --exclude Desktop \
  --exclude Documents \
  --exclude Library \
  --exclude Photos \
  --exclude OrbStack \
  . ~ \
  --exec rm -v {}
