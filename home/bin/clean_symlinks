#!/usr/bin/env bash

##
# Clean up after removing things from homeshick castles
##

fd --hidden --follow --type l \
  --exclude .local/share/Steam \
  --exclude .local/share/flatpak \
  --exclude .local/state/Steam \
  --exclude .local/state/home-manager \
  --exclude .local/state/nix \
  --exclude .nix-defexpr \
  --exclude .steam \
  --exclude .var/app \
  --exclude Code \
  --exclude Desktop \
  --exclude Documents \
  --exclude Library \
  --exclude OrbStack \
  --exclude Photos \
  --exclude lock \
  . ~ \
  --exec rm -v {}
