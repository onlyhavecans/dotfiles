#!/usr/bin/env bash

function status_message {
  GREEN='\033[0;32m'
  NOCOLOR='\033[0m'
  echo ""
  echo -e "${GREEN}~ Starting $*${NOCOLOR}"
}

status_message "Performance Mode"
powerprofilesctl set performance

status_message "Set Audio"
wpctl set-mute @DEFAULT_AUDIO_SINK@ 0
wpctl set-volume @DEFAULT_AUDIO_SINK@ 100%
wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 100%

status_message "Stream"
niri msg action spawn -- steam

status_message "Firebot"
niri msg action spawn -- firebot

status_message "Discord"
niri msg action spawn -- discord

status_message "OBS-Studio"
niri msg action spawn -- obs

status_message "Dahsboard"
xdg-open "https://dashboard.twitch.tv/u/xx_myrii_xx/stream-manager" &

status_message "Music"
niri msg action spawn -- amberol
current_song --player io.bassi.Amberol
